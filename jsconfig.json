{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    // Permite JSX (necess√°rio para React)
    "jsx": "react-jsx",

    
    // Melhorias de IntelliSense
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Evita erros de biblioteca
    "lib": ["DOM", "ESNext"]
  },

  // Define quais pastas o editor deve considerar
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
